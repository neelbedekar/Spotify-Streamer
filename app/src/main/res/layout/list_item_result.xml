<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/touchselector"
    android:id="@+id/list_artist_search_layout"
    android:padding="@dimen/abc_text_size_button_material"
    android:weightSum="1">

    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_result_imageview"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:cropToPadding="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:paddingLeft="@dimen/abc_text_size_button_material"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/list_item_artist_textview"
        android:layout_marginTop="25dp"
        android:layout_alignParentLeft="true" />

</LinearLayout>